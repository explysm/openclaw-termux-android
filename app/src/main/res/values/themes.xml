<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OpenClawAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Optional: set to transparent for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash screen theme for Android 12+ -->
    <style name="Theme.OpenClawAndroid.Starting" parent="Theme.SplashScreen">
        <!-- Window background -->
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        
        <!-- Animated icon (required for Android 12+) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_lobster</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        
        <!-- Status/navigation bar colors during splash -->
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        
        <!-- Theme to use after splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.OpenClawAndroid</item>
    </style>
</resources>
